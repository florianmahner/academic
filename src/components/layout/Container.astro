---
/**
 * Container Component
 * Constrains content width with consistent padding
 */

interface Props {
  size?: 'narrow' | 'base' | 'wide' | 'full';
  padding?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  size = 'base',
  padding = true,
  class: className,
  ...rest
} = Astro.props;

const classes = [
  'container',
  `container-${size}`,
  padding && 'container-padded',
  className
].filter(Boolean).join(' ');
---

<div class={classes} {...rest}>
  <slot />
</div>

<style>
  .container {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  .container-padded {
    padding-left: var(--container-padding);
    padding-right: var(--container-padding);
  }

  /* Size variants */
  .container-narrow {
    max-width: var(--content-width-narrow);
  }

  .container-base {
    max-width: var(--content-max-width);
  }

  .container-wide {
    max-width: var(--content-width-wide);
  }

  .container-full {
    max-width: var(--content-width-full);
  }
</style>
