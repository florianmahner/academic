---
/**
 * NewsTimeline Component
 * Compact timeline showing recent news/updates with date + title + type
 * Designed for 1-2 lines per item, similar to talks timeline
 */

interface NewsItem {
  type: 'blog' | 'talk' | 'publication' | 'project' | 'news';
  title: string;
  date: Date;
  href?: string;
  description?: string;
}

interface Props {
  items: NewsItem[];
  limit?: number;
  showType?: boolean;
  class?: string;
}

const { items, limit = 5, showType = true, class: className } = Astro.props;

// Sort by date descending and limit
const displayItems = items
  .sort((a, b) => b.date.valueOf() - a.date.valueOf())
  .slice(0, limit);

// Format date as "Mon YYYY" or "DD Mon YYYY"
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    year: 'numeric'
  });
};

// Type labels (short)
const typeLabels: Record<string, string> = {
  blog: 'Post',
  talk: 'Talk',
  publication: 'Paper',
  project: 'Project',
  news: 'News',
};
---

<div class:list={['news-timeline', className]}>
  {displayItems.map(item => (
    <div class="news-item" data-animate="fade-up">
      <span class="news-date">{formatDate(item.date)}</span>
      <div class="news-content">
        {item.href ? (
          <a href={item.href} class="news-title">{item.title}</a>
        ) : (
          <span class="news-title">{item.title}</span>
        )}
        {showType && (
          <span class={`news-type news-type--${item.type}`}>{typeLabels[item.type]}</span>
        )}
      </div>
    </div>
  ))}
</div>

<style>
  .news-timeline {
    display: flex;
    flex-direction: column;
  }

  .news-item {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--space-5);
    padding: var(--space-4);
    transition: border-left-color var(--transition-fast);
    border-left: 2px solid transparent;
  }

  @media (hover: hover) {
    .news-item:hover {
      border-left-color: var(--color-accent);
    }
  }

  .news-date {
    font-size: var(--font-size-sm);
    font-family: var(--font-body);
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .news-content {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
    flex-wrap: wrap;
    min-width: 0;
  }

  .news-title {
    font-size: var(--font-size-base);
    font-family: var(--font-body);
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
    /* Truncate long titles */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100%;
  }

  a.news-title:hover {
    color: var(--color-accent);
  }

  .news-type {
    font-size: var(--font-size-xs);
    font-family: var(--font-body);
    font-weight: var(--font-weight-medium);
    padding: 0 var(--space-2);
    border-radius: var(--radius-full);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .news-type--blog {
    color: var(--type-blog);
    background-color: var(--type-blog-bg);
  }

  .news-type--talk {
    color: var(--type-talk);
    background-color: var(--type-talk-bg);
  }

  .news-type--publication {
    color: var(--type-publication);
    background-color: var(--type-publication-bg);
  }

  .news-type--project {
    color: var(--type-project);
    background-color: var(--type-project-bg);
  }

  .news-type--news {
    color: var(--type-news);
    background-color: var(--type-news-bg);
  }

  @media (max-width: 600px) {
    .news-item {
      grid-template-columns: 1fr;
      gap: var(--space-2);
      padding: var(--space-3);
    }

    .news-date {
      font-size: var(--font-size-sm);
      margin-bottom: var(--space-1);
    }
  }
</style>
