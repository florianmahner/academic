---
/**
 * CourseCard Component
 * Display course/teaching information
 */

import Button from '../ui/Button.astro';

interface Props {
  title: string;
  role: string;
  institution: string;
  semester: string;
  description?: string;
  materials?: string;
  class?: string;
}

const {
  title,
  role,
  institution,
  semester,
  description,
  materials,
  class: className,
} = Astro.props;
---

<div class:list={['course-card', className]}>
  <div class="course-header">
    <h3 class="course-title">{title}</h3>
    <span class="course-semester">{semester}</span>
  </div>
  <div class="course-meta">
    <span class="course-role">{role}</span>
    <span class="course-institution">{institution}</span>
  </div>
  {description && <p class="course-description">{description}</p>}
  {materials && (
    <div class="course-actions">
      <Button href={materials} variant="secondary" size="sm">
        View Materials
      </Button>
    </div>
  )}
</div>

<style>
  .course-card {
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    transition: border-color var(--transition-fast);
  }

  .course-card:hover {
    border-color: var(--color-text-muted);
  }

  .course-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .course-title {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    margin: 0;
  }

  .course-semester {
    font-size: var(--font-size-xs);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .course-meta {
    display: flex;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
  }

  .course-role {
    color: var(--color-accent);
    font-weight: var(--font-weight-medium);
  }

  .course-role::after {
    content: 'Â·';
    margin-left: var(--space-2);
    color: var(--color-text-muted);
  }

  .course-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-3);
    line-height: var(--line-height-normal);
  }

  .course-actions {
    margin-top: var(--space-3);
  }
</style>
