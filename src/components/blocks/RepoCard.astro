---
/**
 * RepoCard Component
 * Display GitHub repository with stats
 */

import Card from '../primitives/Card.astro';

interface Props {
  name: string;
  description?: string;
  url: string;
  language?: string;
  stars?: number;
  forks?: number;
  class?: string;
}

const {
  name,
  description,
  url,
  language,
  stars = 0,
  forks = 0,
  class: className,
} = Astro.props;

// Language colors
const langColors: Record<string, string> = {
  python: '#3572A5',
  javascript: '#f1e05a',
  typescript: '#3178c6',
  rust: '#dea584',
  go: '#00ADD8',
  java: '#b07219',
  html: '#e34c26',
  css: '#563d7c',
  shell: '#89e051',
  default: '#8b949e',
};

const langColor = langColors[language?.toLowerCase() || 'default'] || langColors.default;
---

<Card href={url} external class:list={['repo-card', className]}>
  <h3 class="repo-name hover-title">{name}</h3>
  {description && <p class="repo-desc">{description}</p>}
  <div class="repo-footer">
    {language && (
      <span class="lang">
        <span class="dot" style={`background-color: ${langColor}`}></span>
        {language}
      </span>
    )}
    <span class="stats">
      {stars > 0 && (
        <span class="stat">
          <svg aria-hidden="true" width="12" height="12" viewBox="0 0 16 16" fill="currentColor">
            <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.75.75 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25z"/>
          </svg>
          {stars}
        </span>
      )}
      {forks > 0 && (
        <span class="stat">
          <svg aria-hidden="true" width="12" height="12" viewBox="0 0 16 16" fill="currentColor">
            <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z"/>
          </svg>
          {forks}
        </span>
      )}
    </span>
  </div>
</Card>

<style>
  .repo-name {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    margin: 0 0 var(--space-1);
    transition: color var(--transition-fast);
  }

  /* Hover title color handled by global .hover-item:hover .hover-title */

  .repo-desc {
    font-size: var(--font-size-sm);
    font-family: var(--font-body);
    color: var(--color-text-muted);
    line-height: var(--line-height-normal);
    margin: 0 0 var(--space-3);
  }

  .repo-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: var(--font-size-xs);
    font-family: var(--font-body);
    color: var(--color-text-muted);
  }

  .lang {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .stats {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .stat svg {
    opacity: 0.5;
  }
</style>
