---
/**
 * ProjectCard Component
 * Display project with image, description, and links
 */

import Badge from '../ui/Badge.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  tags?: string[];
  url?: string;
  featured?: boolean;
  class?: string;
}

const {
  title,
  description,
  image,
  tags = [],
  url,
  featured = false,
  class: className,
} = Astro.props;

const Tag = url ? 'a' : 'div';
---

<Tag
  href={url}
  target={url ? '_blank' : undefined}
  rel={url ? 'noopener noreferrer' : undefined}
  class:list={['project-card', featured && 'featured', className]}
>
  {image && (
    <div class="project-image">
      <img src={image} alt={title} loading="lazy" decoding="async" />
    </div>
  )}
  <div class="project-content">
    <h3 class="project-title">{title}</h3>
    {description && <p class="project-description">{description}</p>}
    {tags.length > 0 && (
      <div class="project-tags">
        {tags.map(tag => (
          <Badge size="sm" variant="outline">{tag}</Badge>
        ))}
      </div>
    )}
  </div>
</Tag>

<style>
  .project-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-fast);
    background-color: var(--color-bg);
  }

  a.project-card:hover {
    border-color: var(--color-text-muted);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .project-card.featured {
    border-color: var(--color-accent);
    border-width: 2px;
  }

  .project-image {
    margin-bottom: var(--space-3);
    border-radius: var(--radius-sm);
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 140px;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  a.project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .project-title {
    font-size: var(--font-size-base);
    font-family: var(--font-body);
    font-weight: var(--font-weight-medium);
    line-height: var(--line-height-snug);
    margin: 0;
    transition: color var(--transition-fast);
  }

  a.project-card:hover .project-title {
    color: var(--color-accent);
  }

  .project-description {
    font-size: var(--font-size-sm);
    font-family: var(--font-body);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-normal);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin-top: var(--space-2);
  }
</style>
