---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
}

const { src, alt, width, height, class: className, loading = 'lazy' } = Astro.props;

// Use WebP directly (convert .gif references to .webp)
const imgSrc = src.replace('.gif', '.webp');
---

<img
  src={imgSrc}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  class={className}
/>
