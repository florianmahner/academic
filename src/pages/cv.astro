---
import BaseLayout from '../layouts/BaseLayout.astro';
import { config } from '../config';
import cvData from '../content/cv.json';

const title = `CV | ${config.site.title}`;

// Format date range
const formatDateRange = (start?: string, end?: string) => {
  if (!start) return '';
  if (!end || end === 'present') return `${start} – Present`;
  if (start === end) return start;
  return `${start} – ${end}`;
};
---

<BaseLayout title={title} description="Curriculum Vitae">
  <article class="cv-page">
    <div class="container">
      <header class="cv-header" data-animate="fade-up">
        <h1>Curriculum Vitae</h1>
        <a href="/cv.pdf" class="cv-download" target="_blank" rel="noopener">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
          </svg>
          Download PDF
        </a>
      </header>

      <!-- Education -->
      {cvData.education && cvData.education.length > 0 && (
        <section class="cv-section" data-animate="fade-up">
          <h2>Education</h2>
          <div class="timeline">
            {cvData.education.map((edu) => (
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-date">{formatDateRange(edu.startDate, edu.endDate)}</div>
                <div class="timeline-content">
                  <h3>{edu.degree} in {edu.field}</h3>
                  <p class="timeline-org">
                    {edu.url ? (
                      <a href={edu.url} target="_blank" rel="noopener">{edu.institution}</a>
                    ) : edu.institution}
                  </p>
                  {edu.advisor && <p class="timeline-detail">Advisor: {edu.advisor}</p>}
                  {edu.thesis && <p class="timeline-detail">Thesis: <em>{edu.thesis}</em></p>}
                  {edu.honors && <p class="timeline-detail">{edu.honors}</p>}
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Employment -->
      {cvData.work && cvData.work.length > 0 && (
        <section class="cv-section" data-animate="fade-up">
          <h2>Employment</h2>
          <div class="timeline">
            {cvData.work.map((job) => (
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-date">{formatDateRange(job.startDate, job.endDate)}</div>
                <div class="timeline-content">
                  <h3>{job.position}</h3>
                  <p class="timeline-org">
                    {job.url ? (
                      <a href={job.url} target="_blank" rel="noopener">{job.organization}</a>
                    ) : job.organization}
                  </p>
                  {job.summary && <p class="timeline-detail">{job.summary}</p>}
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Grants -->
      {cvData.grants && cvData.grants.length > 0 && (
        <section class="cv-section" data-animate="fade-up">
          <h2>Grants & Funding</h2>
          <div class="timeline">
            {cvData.grants.map((grant) => (
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-date">{formatDateRange(grant.startDate, grant.endDate)}</div>
                <div class="timeline-content">
                  <h3>{grant.title}</h3>
                  <p class="timeline-org">{grant.funder}</p>
                  <p class="timeline-detail">{grant.amount}{grant.role && ` · ${grant.role}`}</p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Awards -->
      {cvData.awards && cvData.awards.length > 0 && (
        <section class="cv-section" data-animate="fade-up">
          <h2>Awards & Honors</h2>
          <div class="timeline">
            {cvData.awards.map((award) => (
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-date">{award.date}</div>
                <div class="timeline-content">
                  <h3>{award.title}</h3>
                  <p class="timeline-org">{award.awarder}</p>
                  {award.summary && <p class="timeline-detail">{award.summary}</p>}
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Teaching -->
      {cvData.teaching && cvData.teaching.length > 0 && (
        <section class="cv-section" data-animate="fade-up">
          <h2>Teaching</h2>
          <div class="timeline">
            {cvData.teaching.map((course) => (
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-date">{course.dates?.join(', ')}</div>
                <div class="timeline-content">
                  <h3>{course.course}</h3>
                  <p class="timeline-org">{course.institution}</p>
                  {course.role && <p class="timeline-detail">{course.role}</p>}
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Service -->
      {cvData.service && cvData.service.length > 0 && (
        <section class="cv-section" data-animate="fade-up">
          <h2>Service</h2>
          <div class="timeline">
            {cvData.service.map((item) => (
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-date">{item.dates?.join(', ') || ''}</div>
                <div class="timeline-content">
                  <h3>{item.role}</h3>
                  <p class="timeline-org">{item.organization}</p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Skills & Languages -->
      <div class="cv-grid" data-animate="fade-up">
        {cvData.skills && cvData.skills.length > 0 && (
          <section class="cv-section cv-section--compact">
            <h2>Skills</h2>
            <div class="skill-list">
              {cvData.skills.map((skill) => (
                <div class="skill-group">
                  <span class="skill-category">{skill.category}</span>
                  <span class="skill-items">{skill.items.join(' · ')}</span>
                </div>
              ))}
            </div>
          </section>
        )}

        {cvData.languages && cvData.languages.length > 0 && (
          <section class="cv-section cv-section--compact">
            <h2>Languages</h2>
            <div class="language-list">
              {cvData.languages.map((lang) => (
                <div class="language-item">
                  <span class="language-name">{lang.language}</span>
                  <span class="language-level">{lang.fluency}</span>
                </div>
              ))}
            </div>
          </section>
        )}
      </div>

      <!-- References -->
      {cvData.references && cvData.references.length > 0 && (
        <section class="cv-section" data-animate="fade-up">
          <h2>References</h2>
          <div class="reference-grid">
            {cvData.references.map((ref) => (
              <div class="reference-card">
                <div class="reference-name">{ref.name}</div>
                <div class="reference-affiliation">{ref.affiliation}</div>
                {ref.email && (
                  <a href={`mailto:${ref.email}`} class="reference-email">{ref.email}</a>
                )}
              </div>
            ))}
          </div>
        </section>
      )}

    </div>
  </article>
</BaseLayout>

<style>
  .cv-page {
    padding-bottom: var(--space-16);
  }

  /* Header */
  .cv-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: var(--space-4);
    margin-bottom: var(--space-10);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border);
  }

  .cv-header h1 {
    margin: 0;
  }

  .cv-download {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    font-family: var(--font-ui);
    color: var(--color-text-muted);
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    transition: all var(--transition-fast);
    background: none;
  }

  .cv-download:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  /* Sections */
  .cv-section {
    margin-bottom: var(--space-10);
  }

  .cv-section h2 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin: 0 0 var(--space-5);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
  }

  /* Timeline */
  .timeline {
    position: relative;
    padding-left: var(--space-6);
  }

  /* Vertical line */
  .timeline::before {
    content: '';
    position: absolute;
    left: 3px;
    top: 6px;
    bottom: 6px;
    width: 1px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: var(--space-4);
    padding-bottom: var(--space-5);
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  /* Dot marker */
  .timeline-marker {
    position: absolute;
    left: calc(-1 * var(--space-6));
    top: 6px;
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: var(--color-text-muted);
    transition: background-color var(--transition-fast);
  }

  .timeline-item:hover .timeline-marker {
    background: var(--color-accent);
  }

  .timeline-date {
    font-size: var(--font-size-sm);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    padding-top: 1px;
  }

  .timeline-content h3 {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    margin: 0 0 var(--space-1);
    line-height: var(--line-height-snug);
  }

  .timeline-org {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-1);
  }

  .timeline-org a {
    color: inherit;
    background: none;
  }

  .timeline-org a:hover {
    color: var(--color-accent);
  }

  .timeline-detail {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .timeline-detail em {
    font-style: italic;
  }

  /* Grid for skills/languages */
  .cv-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
  }

  .cv-section--compact {
    margin-bottom: var(--space-8);
  }

  .cv-section--compact h2 {
    margin-bottom: var(--space-4);
  }

  /* Skills */
  .skill-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .skill-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .skill-category {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
  }

  .skill-items {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  /* Languages */
  .language-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .language-item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    font-size: var(--font-size-sm);
  }

  .language-name {
    font-weight: var(--font-weight-medium);
  }

  .language-level {
    color: var(--color-text-muted);
  }

  /* References */
  .reference-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--space-5);
  }

  .reference-card {
    padding: var(--space-4);
    background: var(--color-surface);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .reference-name {
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-1);
  }

  .reference-affiliation {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }

  .reference-email {
    font-size: var(--font-size-xs);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    background: none;
  }

  .reference-email:hover {
    color: var(--color-accent);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cv-header {
      flex-direction: column;
      gap: var(--space-3);
      align-items: flex-start;
    }

    .timeline-item {
      grid-template-columns: 1fr;
      gap: var(--space-1);
    }

    .timeline-date {
      font-size: var(--font-size-xs);
    }

    .cv-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  /* Print */
  @media print {
    .cv-download {
      display: none;
    }

    .cv-page {
      padding: 0;
    }

    .timeline::before {
      background: #ccc;
    }

    .timeline-marker {
      background: #666;
    }

    .reference-card {
      border-color: #ccc;
      background: transparent;
    }
  }
</style>
