---
import BaseLayout from '../layouts/BaseLayout.astro';
import { config } from '../config';
import cvData from '../content/cv.json';

const title = `CV | ${config.site.title}`;

// Format date range elegantly
const formatDateRange = (start?: string, end?: string) => {
  if (!start) return '';
  if (!end || end === 'present') return `${start}–`;
  if (start === end) return start;
  return `${start}–${end}`;
};
---

<BaseLayout title={title} description="Curriculum Vitae">
  <article class="cv-page">
    <div class="cv-container">
      <!-- Header -->
      <header class="cv-header">
        <div class="cv-title-row">
          <h1>Curriculum Vitae</h1>
          <a href="/cv.pdf" class="cv-pdf-link" target="_blank" rel="noopener">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            PDF
          </a>
        </div>
      </header>

      <!-- Education -->
      {cvData.education && cvData.education.length > 0 && (
        <section class="cv-section">
          <h2 class="cv-section-title">Education</h2>
          <div class="cv-entries">
            {cvData.education.map((edu) => (
              <div class="cv-entry">
                <div class="cv-entry-main">
                  <div class="cv-entry-title">
                    {edu.degree} in {edu.field}
                  </div>
                  <div class="cv-entry-org">
                    {edu.url ? (
                      <a href={edu.url}>{edu.institution}</a>
                    ) : edu.institution}
                  </div>
                  {edu.advisor && <div class="cv-entry-detail">Advisor: {edu.advisor}</div>}
                  {edu.thesis && <div class="cv-entry-detail">Thesis: <em>{edu.thesis}</em></div>}
                  {edu.honors && <div class="cv-entry-detail">{edu.honors}</div>}
                </div>
                <div class="cv-entry-date">{formatDateRange(edu.startDate, edu.endDate)}</div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Employment -->
      {cvData.work && cvData.work.length > 0 && (
        <section class="cv-section">
          <h2 class="cv-section-title">Employment</h2>
          <div class="cv-entries">
            {cvData.work.map((job) => (
              <div class="cv-entry">
                <div class="cv-entry-main">
                  <div class="cv-entry-title">{job.position}</div>
                  <div class="cv-entry-org">
                    {job.url ? (
                      <a href={job.url}>{job.organization}</a>
                    ) : job.organization}
                  </div>
                  {job.summary && <div class="cv-entry-detail">{job.summary}</div>}
                </div>
                <div class="cv-entry-date">{formatDateRange(job.startDate, job.endDate)}</div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Grants -->
      {cvData.grants && cvData.grants.length > 0 && (
        <section class="cv-section">
          <h2 class="cv-section-title">Grants & Funding</h2>
          <div class="cv-entries">
            {cvData.grants.map((grant) => (
              <div class="cv-entry">
                <div class="cv-entry-main">
                  <div class="cv-entry-title">{grant.title}</div>
                  <div class="cv-entry-org">{grant.funder}</div>
                  <div class="cv-entry-detail">
                    {grant.amount}{grant.role && ` · ${grant.role}`}
                  </div>
                </div>
                <div class="cv-entry-date">{formatDateRange(grant.startDate, grant.endDate)}</div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Awards -->
      {cvData.awards && cvData.awards.length > 0 && (
        <section class="cv-section">
          <h2 class="cv-section-title">Awards & Honors</h2>
          <div class="cv-entries">
            {cvData.awards.map((award) => (
              <div class="cv-entry">
                <div class="cv-entry-main">
                  <div class="cv-entry-title">{award.title}</div>
                  <div class="cv-entry-org">{award.awarder}</div>
                  {award.summary && <div class="cv-entry-detail">{award.summary}</div>}
                </div>
                <div class="cv-entry-date">{award.date}</div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Teaching -->
      {cvData.teaching && cvData.teaching.length > 0 && (
        <section class="cv-section">
          <h2 class="cv-section-title">Teaching</h2>
          <div class="cv-entries">
            {cvData.teaching.map((course) => (
              <div class="cv-entry">
                <div class="cv-entry-main">
                  <div class="cv-entry-title">{course.course}</div>
                  <div class="cv-entry-org">{course.institution}</div>
                  {course.role && <div class="cv-entry-detail">{course.role}</div>}
                </div>
                <div class="cv-entry-date">{course.dates?.join(', ')}</div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Service -->
      {cvData.service && cvData.service.length > 0 && (
        <section class="cv-section">
          <h2 class="cv-section-title">Service</h2>
          <div class="cv-entries">
            {cvData.service.map((item) => (
              <div class="cv-entry">
                <div class="cv-entry-main">
                  <div class="cv-entry-title">{item.role}</div>
                  <div class="cv-entry-org">{item.organization}</div>
                </div>
                <div class="cv-entry-date">{item.dates?.join(', ') || ''}</div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Skills & Languages in two columns -->
      <div class="cv-two-col">
        {cvData.skills && cvData.skills.length > 0 && (
          <section class="cv-section cv-section--compact">
            <h2 class="cv-section-title">Skills</h2>
            <dl class="cv-definition-list">
              {cvData.skills.map((skill) => (
                <>
                  <dt>{skill.category}</dt>
                  <dd>{skill.items.join(', ')}</dd>
                </>
              ))}
            </dl>
          </section>
        )}

        {cvData.languages && cvData.languages.length > 0 && (
          <section class="cv-section cv-section--compact">
            <h2 class="cv-section-title">Languages</h2>
            <dl class="cv-definition-list">
              {cvData.languages.map((lang) => (
                <>
                  <dt>{lang.language}</dt>
                  <dd>{lang.fluency}</dd>
                </>
              ))}
            </dl>
          </section>
        )}
      </div>

      <!-- References -->
      {cvData.references && cvData.references.length > 0 && (
        <section class="cv-section">
          <h2 class="cv-section-title">References</h2>
          <div class="cv-references">
            {cvData.references.map((ref) => (
              <div class="cv-reference">
                <div class="cv-reference-name">{ref.name}</div>
                <div class="cv-reference-affiliation">{ref.affiliation}</div>
                {ref.email && (
                  <a href={`mailto:${ref.email}`} class="cv-reference-email">{ref.email}</a>
                )}
              </div>
            ))}
          </div>
        </section>
      )}

    </div>
  </article>
</BaseLayout>

<style>
  .cv-page {
    padding-bottom: var(--space-16);
  }

  .cv-container {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  /* Header */
  .cv-header {
    margin-bottom: var(--space-10);
    padding-bottom: var(--space-4);
    border-bottom: 2px solid var(--color-text);
  }

  .cv-title-row {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .cv-header h1 {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-normal);
    font-variant: small-caps;
    letter-spacing: 0.05em;
    text-transform: lowercase;
    margin: 0;
  }

  .cv-pdf-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--font-size-sm);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .cv-pdf-link:hover {
    color: var(--color-text);
  }

  /* Sections */
  .cv-section {
    margin-bottom: var(--space-8);
  }

  .cv-section-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    font-variant: small-caps;
    letter-spacing: 0.1em;
    text-transform: lowercase;
    color: var(--color-text-muted);
    margin: 0 0 var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
  }

  /* Entries */
  .cv-entries {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .cv-entry {
    display: flex;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .cv-entry-main {
    flex: 1;
    min-width: 0;
  }

  .cv-entry-title {
    font-weight: var(--font-weight-medium);
    line-height: var(--line-height-snug);
  }

  .cv-entry-org {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-top: var(--space-0-5);
  }

  .cv-entry-org a {
    color: inherit;
    text-decoration: none;
    background: none;
  }

  .cv-entry-org a:hover {
    text-decoration: underline;
  }

  .cv-entry-detail {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-1);
  }

  .cv-entry-date {
    font-size: var(--font-size-sm);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Two column layout for skills/languages */
  .cv-two-col {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
  }

  .cv-section--compact {
    margin-bottom: var(--space-6);
  }

  /* Definition list for skills/languages */
  .cv-definition-list {
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .cv-definition-list dt {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    margin: 0;
  }

  .cv-definition-list dd {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-2);
  }

  /* References */
  .cv-references {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
  }

  .cv-reference {
    font-size: var(--font-size-sm);
  }

  .cv-reference-name {
    font-weight: var(--font-weight-medium);
  }

  .cv-reference-affiliation {
    color: var(--color-text-secondary);
    margin-top: var(--space-0-5);
  }

  .cv-reference-email {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-top: var(--space-1);
    background: none;
  }

  .cv-reference-email:hover {
    color: var(--color-text);
  }

  /* Responsive */
  @media (max-width: 600px) {
    .cv-container {
      padding: 0 var(--space-4);
    }

    .cv-header h1 {
      font-size: var(--font-size-xl);
    }

    .cv-entry {
      flex-direction: column;
      gap: var(--space-1);
    }

    .cv-entry-date {
      order: -1;
      font-size: var(--font-size-xs);
    }

    .cv-two-col {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .cv-references {
      grid-template-columns: 1fr;
    }
  }

  /* Print styles */
  @media print {
    .cv-page {
      padding: 0;
    }

    .cv-container {
      max-width: none;
      padding: 0;
    }

    .cv-pdf-link {
      display: none;
    }

    .cv-header {
      border-bottom-color: #000;
    }

    .cv-section-title {
      color: #666;
      border-bottom-color: #ccc;
    }

    .cv-entry-org,
    .cv-entry-detail,
    .cv-entry-date {
      color: #444;
    }

    a {
      color: inherit;
      text-decoration: none;
    }
  }
</style>
