---
import BaseLayout from '../layouts/BaseLayout.astro';
import { config } from '../config';
import { loadPublications, getSelectedPublications } from '../lib/bibtex';
import educationData from '../content/education.json';

const title = config.site.title;

// Load publications from BibTeX or JSON (prefers .bib)
const publications = loadPublications(new URL('../content', import.meta.url).pathname);
const selectedPapers = getSelectedPublications(publications);

// Education data
const education = educationData.education;

// Build name for display
const fullName = [config.name.first, config.name.middle, config.name.last].filter(Boolean).join(' ');
const displayName = config.name.middle
  ? `${config.name.first} ${config.name.middle}`
  : config.name.first;
---

<BaseLayout title={title}>
  <article class="about-page">
    <div class="container">
      <!-- About Section -->
      <section class="about-section" data-animate="fade-up">
        <p>
          {config.about.bio}
        </p>
        {config.about.affiliation && (
          <p>
            I am affiliated with <a href={config.about.affiliation.url}>{config.about.affiliation.name}</a>.
          </p>
        )}
      </section>

      <!-- Research Interests -->
      <section class="section" data-animate="fade-up">
        <h2>Research Interests</h2>
        <p>
          {config.about.researchInterests}
        </p>
      </section>

      <!-- Selected Publications -->
      {config.features.selectedPublications && selectedPapers.length > 0 && (
        <section class="section" data-animate="fade-up">
          <h2>Selected Publications</h2>
          <div class="selected-papers" data-animate="stagger">
            {selectedPapers.map(paper => (
              <article class="paper-card paper-card--with-preview-lg">
                {paper.preview && (
                  <div class="paper-preview paper-preview--lg">
                    <img src={paper.preview} alt={paper.title} loading="lazy" />
                  </div>
                )}
                <div class="paper-content">
                  <div class="paper-meta">
                    <span class="paper-venue">{paper.journal || paper.booktitle}</span>
                    <span class="paper-year">{paper.year}</span>
                  </div>
                  <h3 class="paper-title">
                    {paper.pdf ? (
                      <a href={paper.pdf} target="_blank" rel="noopener noreferrer">{paper.title}</a>
                    ) : paper.html ? (
                      <a href={paper.html} target="_blank" rel="noopener noreferrer">{paper.title}</a>
                    ) : (
                      paper.title
                    )}
                  </h3>
                  <p class="paper-authors">{paper.authors.join(', ')}</p>
                  <div class="paper-links">
                    {paper.pdf && (
                      <a href={paper.pdf} class="paper-link" target="_blank" rel="noopener noreferrer">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                          <polyline points="7 10 12 15 17 10"></polyline>
                          <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                        PDF
                      </a>
                    )}
                    {paper.html && (
                      <a href={paper.html} class="paper-link" target="_blank" rel="noopener noreferrer">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <circle cx="12" cy="12" r="10"></circle>
                          <line x1="2" y1="12" x2="22" y2="12"></line>
                          <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>
                        Web
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
          </div>
          <p class="view-all">
            <a href="/publications">View all publications &rarr;</a>
          </p>
        </section>
      )}

      <!-- Academic Background -->
      {config.features.education && education.length > 0 && (
        <section class="section" data-animate="fade-up">
          <h2>Academic Background</h2>

          <div class="education-list" data-animate="stagger">
            {education.map(edu => (
              <div class="education-item">
                <div class="education-period">{edu.startYear} â€“ {edu.endYear}</div>
                <div class="education-content">
                  <p><strong>{edu.degree} in {edu.field}</strong></p>
                  <p class="education-institution">
                    <a href={edu.institutionUrl}>{edu.institution}</a>
                  </p>
                  {edu.supervisors && (
                    <p class="education-details">
                      Supervisors: {edu.supervisors.map((sup, i) => (
                        <>
                          <a href={sup.url}>{sup.name}</a>
                          {i < edu.supervisors.length - 1 && ', '}
                        </>
                      ))}
                    </p>
                  )}
                  {edu.grade && (
                    <p class="education-details">Grade: {edu.grade}</p>
                  )}
                  {edu.thesis && (
                    <a href={edu.thesis.url} class="thesis-link">Thesis: {edu.thesis.title}</a>
                  )}
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .about-page {
    /* Vertical padding handled by article in global.css */
  }

  /* About Section - first element alignment */
  .about-section {
    margin-top: 0;
    margin-bottom: var(--space-8);
  }

  .about-section p:first-child {
    margin-top: 0;
  }

  .about-section p {
    font-size: var(--font-size-base);
    font-family: var(--font-body);
    line-height: var(--line-height-normal);
  }

  /* Sections */
  .section {
    margin-bottom: var(--space-8);
  }

  .section h2 {
    margin-bottom: var(--space-4);
  }

  /* Selected Papers - uses global .paper-* classes from global.css */
  .selected-papers {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  /* Education */
  .education-list {
    display: flex;
    flex-direction: column;
  }

  .education-item {
    display: grid;
    grid-template-columns: 110px 1fr;
    gap: var(--space-5);
    padding: var(--space-4);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .education-item:hover {
    background-color: var(--color-bg-alt);
  }

  .education-period {
    font-size: var(--font-size-base);
    font-family: var(--font-body);
    font-weight: var(--font-weight-normal);
    line-height: var(--line-height-normal);
    color: var(--color-text-muted);
  }

  .education-content p {
    margin: 0 0 var(--space-1);
  }

  .education-content strong {
    font-weight: var(--font-weight-medium);
  }

  .education-institution a {
    color: var(--color-text-secondary);
  }

  .education-details {
    color: var(--color-text-muted);
  }

  .thesis-link {
    display: inline-block;
    font-size: var(--font-size-base);
    color: var(--color-accent);
    background: none;
  }

  @media (max-width: 500px) {
    .education-item {
      grid-template-columns: 1fr;
      gap: var(--space-1);
    }
  }
</style>
