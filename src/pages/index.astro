---
import BaseLayout from '../layouts/BaseLayout.astro';
import { PaperCard } from '../components/blocks';
import EducationCard from '../components/blocks/EducationCard.astro';
import NewsTimeline from '../components/blocks/NewsTimeline.astro';
import ProfilePicture from '../components/blocks/ProfilePicture.astro';
import { config } from '../lib/config';
import educationData from '../content/education.json';
import { loadPublications, getSelectedPublications } from '../lib/bibtex';
import type { Publication } from '../lib/bibtex';
import { getAboutContent, getRecentNews } from '../lib/content-helpers';
import path from 'node:path';

const title = config.site.title;

// Default section order and titles
const defaultSections = [
  { id: 'about', enabled: true, title: '' },
  { id: 'research', enabled: true, title: 'Research Interests' },
  { id: 'publications', enabled: config.features.selectedPublications, title: 'Selected Publications' },
  { id: 'education', enabled: config.features.education, title: 'Academic Background' },
  { id: 'news', enabled: true, title: 'News', limit: 5 },
];

// Merge with custom config if provided
const sections = config.homepage?.sections || defaultSections;

// Helper to get section config
const getSection = (id: string) => {
  const section = sections.find(s => s.id === id);
  const defaultSection = defaultSections.find(s => s.id === id);
  return {
    enabled: section?.enabled ?? defaultSection?.enabled ?? true,
    title: section?.title ?? defaultSection?.title ?? '',
    limit: section?.limit ?? defaultSection?.limit,
  };
};

// Prepend base path to images
const base = import.meta.env.BASE_URL;
const prependBase = (path: string) => {
  if (!path || path.startsWith('http')) return path;
  if (base === '/') return path;
  // Avoid double slashes: remove trailing slash from base before joining
  const normalizedBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${normalizedBase}${path}`;
};

// Load about page content
const { bioHtml, researchInterestsHtml } = await getAboutContent();

// Load selected publications from BibTeX file
let selectedPublications: Publication[] = [];
if (config.features.selectedPublications) {
  const contentDir = path.join(process.cwd(), 'src', 'content');
  const allPublications = loadPublications(contentDir);
  selectedPublications = getSelectedPublications(allPublications);
}

// Featured projects section removed per user request

// Load recent items for news timeline (blog posts)
const newsSection = getSection('news');
const newsItems = await getRecentNews(newsSection.limit || 5, base);

// Education data
const education = educationData.education;
---

<BaseLayout title={title}>
  <article class="about-page">
    <div class="container">
      <h1 class="sr-only">{[config.name.first, config.name.middle, config.name.last].filter(Boolean).join(' ')} - Academic Portfolio</h1>
      <!-- About Section with optional Profile Picture -->
      <section class="about-section" data-animate="fade-up">
        {config.features.profilePicture && config.avatar ? (
          <div class="about-content-with-photo">
            <div class="about-photo">
              <ProfilePicture
                src={prependBase(config.avatar)}
                alt={`${config.name.first} ${config.name.last}`}
                size="medium"
              />
            </div>
            <div class="about-text prose" set:html={bioHtml} />
          </div>
        ) : (
          <div class="prose" set:html={bioHtml} />
        )}
      </section>

      <!-- Research Interests -->
      {researchInterestsHtml && (
        <section class="section" data-animate="fade-up">
          <h2>Research Interests</h2>
          <div class="prose" set:html={researchInterestsHtml} />
        </section>
      )}

      <!-- Selected Publications -->
      {config.features.selectedPublications && selectedPublications.length > 0 && (
        <section class="section" data-animate="fade-up">
          <h2>Selected Publications</h2>
          <div class="selected-papers" data-animate="stagger">
            {selectedPublications.map(pub => (
              <PaperCard
                title={pub.title}
                authors={pub.authors}
                venue={`${pub.journal || pub.booktitle}${pub.year ? `, ${pub.year}` : ''}`}
                preview={prependBase(pub.preview)}
                pdf={pub.pdf}
                html={pub.html}
                code={pub.code}
                abbr={pub.abbr}
              />
            ))}
          </div>
          <p class="view-all">
            <a href={prependBase('/publications')}>View all publications &rarr;</a>
          </p>
        </section>
      )}

      <!-- Academic Background -->
      {config.features.education && education.length > 0 && (
        <section class="section" data-animate="fade-up">
          <h2>Academic Background</h2>

          <div class="education-list" data-animate="stagger">
            {education.map(edu => (
              <EducationCard
                startYear={edu.startYear}
                endYear={edu.endYear}
                degree={edu.degree}
                field={edu.field}
                institution={edu.institution}
                institutionUrl={edu.institutionUrl}
                supervisors={edu.supervisors}
                grade={edu.grade}
                thesis={edu.thesis}
              />
            ))}
          </div>
        </section>
      )}

      <!-- News & Updates -->
      {newsItems.length > 0 && (
        <section class="section" data-animate="fade-up">
          <h2>News</h2>
          <NewsTimeline items={newsItems} limit={5} showType={true} />
          <p class="view-all">
            <a href={prependBase('/news')}>View all news &rarr;</a>
          </p>
        </section>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  .about-page {
    /* Vertical padding handled by article in global.css */
  }

  /* About Section - first element alignment */
  .about-section {
    margin-top: 0;
    margin-bottom: var(--space-8);
  }

  .about-section p:first-child {
    margin-top: 0;
  }

  .about-section p {
    font-size: var(--font-size-base);
    font-family: var(--font-body);
    line-height: var(--line-height-normal);
  }

  /* About section with profile photo */
  .about-content-with-photo {
    display: flex;
    gap: var(--space-8);
    align-items: flex-start;
  }

  .about-photo {
    flex-shrink: 0;
  }

  .about-text {
    flex: 1;
    min-width: 0;
  }

  .about-text p:first-child {
    margin-top: 0;
  }

  @media (max-width: 768px) {
    .about-content-with-photo {
      flex-direction: column;
      gap: var(--space-5);
    }

    .about-photo {
      align-self: flex-start;
    }

    .about-section {
      margin-bottom: var(--space-6);
    }

    .about-section p {
      font-size: var(--font-size-base);
    }
  }

  /* Sections */
  .section {
    margin-bottom: var(--space-8);
  }

  .section h2 {
    margin-bottom: var(--space-4);
  }

  /* Selected Papers - uses global .paper-* classes from global.css */
  .selected-papers {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  /* News section spacing handled by NewsTimeline component */

  /* View all link */
  .view-all {
    margin-top: var(--space-4);
    text-align: right;
  }

  .view-all a {
    color: var(--color-accent);
    font-weight: var(--font-weight-medium);
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .view-all a:hover {
    opacity: 0.8;
  }

  /* Education */
  .education-list {
    display: flex;
    flex-direction: column;
  }

  /* Very small screens */
  @media (max-width: 400px) {
    .section {
      margin-bottom: var(--space-6);
    }

    .section h2 {
      margin-bottom: var(--space-3);
    }

    .view-all {
      margin-top: var(--space-3);
    }
  }
</style>
