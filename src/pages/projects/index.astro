---
/**
 * Projects Index Page
 * Reads layout configuration from collection-pages/projects.md frontmatter
 */
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { config } from '../../config';
import LayoutDispatcher from '../../components/layouts/LayoutDispatcher.astro';

// Get page configuration from frontmatter
const pageConfig = await getEntry('collection-pages', 'projects');
if (!pageConfig) {
  throw new Error('Missing collection-pages/projects.md - please create this file with layout configuration');
}

const { title, description, pageLayout, layoutConfig, sortBy, sortOrder } = pageConfig.data;

// Get all projects
const projects = await getCollection('projects');

// Sort entries based on frontmatter config (with featured items first)
const sortedEntries = projects.sort((a, b) => {
  // Featured items always come first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;

  const fieldA = (a.data as any)[sortBy || 'startDate'];
  const fieldB = (b.data as any)[sortBy || 'startDate'];

  const valA = fieldA?.valueOf?.() ?? fieldA ?? 0;
  const valB = fieldB?.valueOf?.() ?? fieldB ?? 0;

  return sortOrder === 'asc' ? valA - valB : valB - valA;
});

const pageTitle = `${title} | ${config.site.title}`;
---

<BaseLayout title={pageTitle} description={description}>
  <article class="collection-page">
    <div class="container">
      <LayoutDispatcher
        collection="projects"
        entries={sortedEntries}
        title={title}
        description={description}
        layoutOverride={pageLayout}
        configOverride={layoutConfig}
      />
    </div>
  </article>
</BaseLayout>

<style>
  .collection-page {
    /* Vertical padding handled by article in global.css */
  }
</style>
