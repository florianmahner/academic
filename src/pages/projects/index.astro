---
/**
 * Projects Index Page
 * Uses the unified view system for consistent, customizable display
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { config } from '../../lib/config';
import ViewDispatcher from '../../components/views/ViewDispatcher.astro';

// Page configuration (inline)
const title = 'Projects';
const description = 'Research projects, tools, and open source contributions';
const view = 'showcase';
const viewConfig = { showFeatured: true, showStatus: true, showLinks: ['github', 'demo', 'documentation'] };
const sortBy = 'startDate';
const sortOrder = 'desc';

// Get all projects
const projects = await getCollection('projects');

// Sort entries based on frontmatter config (with featured items first)
const sortedEntries = projects.sort((a, b) => {
  // Featured items always come first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;

  const fieldA = (a.data as any)[sortBy || 'startDate'];
  const fieldB = (b.data as any)[sortBy || 'startDate'];

  const valA = fieldA?.valueOf?.() ?? fieldA ?? 0;
  const valB = fieldB?.valueOf?.() ?? fieldB ?? 0;

  return sortOrder === 'asc' ? valA - valB : valB - valA;
});

// Transform entries for view components
const viewItems = sortedEntries.map(entry => ({
  title: entry.data.title,
  slug: entry.slug,
  description: entry.data.description,
  date: entry.data.startDate || entry.data.date,
  tags: entry.data.tags || entry.data.technologies,
  status: entry.data.status,
  featured: entry.data.featured,
  // Links
  github: entry.data.github,
  url: entry.data.url || entry.data.website,
  demo: entry.data.demo,
  documentation: entry.data.documentation,
  pypi: entry.data.pypi,
}));

const pageTitle = `${title} | ${config.site.title}`;
---

<BaseLayout title={pageTitle} description={description}>
  <article class="collection-page">
    <div class="container">
      <ViewDispatcher
        view={view || 'showcase'}
        items={viewItems}
        config={viewConfig}
        collection="projects"
        title={title}
        description={description}
      />

      {viewItems.length === 0 && (
        <div class="empty-state" data-animate="fade-up">
          <p>No projects to display yet. Check back soon!</p>
        </div>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .collection-page {
    /* Vertical padding handled by article in global.css */
  }

  .empty-state {
    text-align: center;
    padding: var(--space-12) var(--space-4);
    color: var(--color-text-muted);
  }
</style>
