---
/**
 * 404 Error Page
 * Custom error page that matches the site design
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { config } from '../config';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
>
  <div class="error-page">
    <div class="error-content">
      <span class="error-code" aria-hidden="true">404</span>
      <h1 class="error-title">Page Not Found</h1>
      <p class="error-message">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <div class="error-actions">
        <a href="/" class="button-primary">
          <svg aria-hidden="true" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Go Home
        </a>
        <a href="/publications" class="button-secondary">View Publications</a>
      </div>

      <nav class="error-nav" aria-label="Popular pages">
        <h2 class="sr-only">Popular Pages</h2>
        <p class="nav-label">Or try one of these:</p>
        <ul class="nav-list">
          <li><a href="/publications">Publications</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/teaching">Teaching</a></li>
        </ul>
      </nav>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    padding: var(--space-8);
  }

  .error-content {
    text-align: center;
    max-width: 480px;
    width: 100%;
  }

  .error-code {
    display: block;
    font-size: clamp(5rem, 20vw, 10rem);
    font-weight: 800;
    line-height: 1;
    color: var(--color-accent);
    opacity: 0.15;
    margin-bottom: calc(var(--space-4) * -1);
    user-select: none;
    font-family: var(--font-heading);
  }

  .error-title {
    font-family: var(--font-heading);
    font-size: var(--font-size-2xl);
    font-weight: 600;
    margin: 0 0 var(--space-3);
    color: var(--color-text);
  }

  .error-message {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
  }

  .error-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-8);
  }

  .button-primary,
  .button-secondary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    font-family: var(--font-ui);
  }

  .button-primary {
    background: var(--color-accent);
    color: white;
    border: 1px solid var(--color-accent);
  }

  .button-primary:hover {
    opacity: 0.9;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .button-secondary {
    border: 1px solid var(--color-border);
    color: var(--color-text);
    background: transparent;
  }

  .button-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    background: var(--color-bg-alt);
  }

  .error-nav {
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .nav-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-3);
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .nav-list a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: color 0.15s ease;
  }

  .nav-list a:hover {
    color: var(--color-accent);
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .error-page {
      padding: var(--space-6);
    }

    .error-actions {
      flex-direction: column;
      width: 100%;
    }

    .button-primary,
    .button-secondary {
      width: 100%;
      justify-content: center;
    }

    .error-code {
      font-size: clamp(4rem, 15vw, 6rem);
    }
  }
</style>
