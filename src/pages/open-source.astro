---
import BaseLayout from '../layouts/BaseLayout.astro';
import RepoCard from '../components/blocks/RepoCard.astro';
import reposData from '../content/repositories.json';
import { loadRepositories } from '../lib/github';
import { config } from '../lib/config';
import PreviewPanel from '../components/PreviewPanel.astro';
import { getPageOptions } from '../lib/preview-options';

const title = `Open Source | ${config.site.title}`;

// Load and fetch repo data from GitHub API
const sortedRepos = await loadRepositories(reposData.repositories);
---

<BaseLayout title={title} description="Open source tools and libraries">
  <article class="opensource-page">
    <div class="container">
      <header class="page-header" data-animate="fade-up">
        <h1>Open Source</h1>
        <p class="page-description">
          Open source tools and libraries I contribute to or maintain.
        </p>
      </header>

      <div class="repos-grid" data-animate="stagger">
        {sortedRepos.map(repo => (
          <RepoCard
            name={repo.name}
            description={repo.description}
            url={repo.url}
            language={repo.language}
            stars={repo.stars}
            forks={repo.forks}
          />
        ))}
      </div>

      <p class="view-all" data-animate="fade">
        <a href={`https://github.com/${reposData.github_user}`} target="_blank" rel="noopener noreferrer">
          View all on GitHub &rarr;
        </a>
      </p>
    </div>
  </article>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-8);
  }

  .page-header h1 {
    margin-top: 0;
    margin-bottom: var(--space-2);
  }

  .page-description {
    color: var(--color-text-muted);
    font-size: var(--font-size-base);
    margin: 0;
  }

  /* 2x2 Grid like GitHub pinned repos */
  .repos-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
    margin-top: 0;
  }

  @media (max-width: 600px) {
    .repos-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{import.meta.env.DEV && (
  <PreviewPanel
    pageType="open-source"
    options={getPageOptions('open-source')?.options || []}
  />
)}

<script>
  document.addEventListener('preview-option-change', ((e: CustomEvent) => {
    const { option, value, pageType } = e.detail;
    if (pageType !== 'open-source') return;

    // Handle column changes
    if (option === 'columns') {
      const grid = document.querySelector('.repos-grid') as HTMLElement;
      if (grid) {
        grid.style.gridTemplateColumns = `repeat(${value}, 1fr)`;
      }
    }

    // Toggle stats visibility
    if (option === 'showStats') {
      document.querySelectorAll('.repo-stats').forEach(el => {
        (el as HTMLElement).style.display = value ? '' : 'none';
      });
    }

    // Toggle language visibility
    if (option === 'showLanguage') {
      document.querySelectorAll('.language-dot, .repo-language').forEach(el => {
        (el as HTMLElement).style.display = value ? '' : 'none';
      });
    }
  }) as EventListener);
</script>
