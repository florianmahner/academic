---
import BaseLayout from '../layouts/BaseLayout.astro';
import misc from '../content/misc.json';
import { config } from '../config';

const title = `Misc | ${config.site.title}`;
const tools = misc.tools;
---

<BaseLayout title={title} description="Tools and resources I use">
  <article class="misc-page">
    <div class="container">
      <header class="page-header" data-animate="fade-up">
        <h1>Miscellaneous</h1>
      </header>

      <section class="section" data-animate="fade-up">
        <h2 class="section-label">Tools</h2>
        <div class="tools-grid" data-animate="stagger">
          {tools.map(tool => (
            <a href={tool.url} class="tool-chip" target="_blank" rel="noopener noreferrer">
              <span class="tool-name">{tool.name}</span>
              <span class="tool-desc">{tool.description}</span>
            </a>
          ))}
        </div>
      </section>

      <section class="section" data-animate="fade-up">
        <h2 class="section-label">Configs</h2>
        <div class="config-list">
          <a href="/vimrc" class="config-item" download>
            <div class="config-info">
              <span class="config-name">vimrc</span>
              <span class="config-desc">My Vim configuration file</span>
            </div>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
          </a>
        </div>
      </section>
    </div>
  </article>
</BaseLayout>

<style>
  .misc-page {
    padding: var(--space-8) 0;
  }

  /* Use global .page-header and .section patterns */

  /* Tools grid */
  .tools-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tool-chip {
    display: inline-flex;
    align-items: baseline;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .tool-chip:hover {
    background-color: var(--color-bg-alt);
  }

  .tool-name {
    font-size: var(--font-size-sm);
    color: var(--color-text);
  }

  .tool-chip:hover .tool-name {
    color: var(--color-accent);
  }

  .tool-desc {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* Config list */
  .config-list {
    display: flex;
    flex-direction: column;
  }

  .config-item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
    width: fit-content;
  }

  .config-item:hover {
    background-color: var(--color-bg-alt);
  }

  .config-item svg {
    color: var(--color-text-muted);
  }

  .config-item:hover svg {
    color: var(--color-accent);
  }

  .config-info {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
  }

  .config-name {
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    color: var(--color-text);
  }

  .config-item:hover .config-name {
    color: var(--color-accent);
  }

  .config-desc {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  @media (max-width: 500px) {
    .tool-chip {
      flex-direction: column;
      align-items: flex-start;
      gap: 0;
    }
    .config-info {
      flex-direction: column;
      gap: 0;
    }
  }
</style>
