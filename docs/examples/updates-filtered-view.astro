---
/**
 * Example: Filtered Updates View
 * Shows how to create focused views (e.g., "Publications Timeline", "Blog Archive")
 */

import BaseLayout from '../../src/layouts/BaseLayout.astro';
import { UpdatesList } from '../../src/components/blocks';
import { getUpdatesByType } from '../../src/lib/updates';

// Get only publications and talks
const researchUpdates = await getUpdatesByType(['publication', 'talk']);
---

<BaseLayout
  title="Research Timeline"
  description="Timeline of publications and conference presentations"
>
  <article class="container">
    <header class="page-header">
      <h1>Research Timeline</h1>
      <p class="page-description">
        A chronological overview of my research publications and conference presentations.
      </p>
    </header>

    <UpdatesList
      items={researchUpdates}
      groupByMonth={true}
      showType={true}
    />
  </article>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-12);
  }

  .page-header h1 {
    margin-bottom: var(--space-3);
  }

  .page-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 65ch;
  }
</style>
